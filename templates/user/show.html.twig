{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header text-center">
                <h1>User</h1>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>{{ user.password }}</td>
                        </tr>
                        <tr>
                            <th>Ismale</th>
                            <td>{{ user.ismale ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th>Firstname</th>
                            <td>{{ user.firstname }}</td>
                        </tr>
                        <tr>
                            <th>Lastname</th>
                            <td>{{ user.lastname }}</td>
                        </tr>
                        <tr>
                            <th>Datebirth</th>
                            <td>{{ user.datebirth ? user.datebirth|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Adnum</th>
                            <td>{{ user.adnum }}</td>
                        </tr>
                        <tr>
                            <th>Adstreet</th>
                            <td>{{ user.adstreet }}</td>
                        </tr>
                        <tr>
                            <th>Adcity</th>
                            <td>{{ user.adcity }}</td>
                        </tr>
                        <tr>
                            <th>Adpostalcode</th>
                            <td>{{ user.adpostalcode }}</td>
                        </tr>
                    </tbody>
                </table>

                <p>List de NFT</p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom de Sous-catégory</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for nft in user.nfts %}
                        <tr>
                            <td>{{ nft.getId() }}</td>
                            <td>{{ nft.getNameNft() }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <a href="{{ path('app_user_index') }}" class="btn btn-secondary mt-3">Back to List</a>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning mt-3">Edit</a>
        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
