{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Category</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name_cat</th>
                    <td>{{ category.nameCat }}</td>
                </tr>
            </tbody>
        </table>

        <p>TEST</p>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom de Sous-cat√©gory</th>
                </tr>
            </thead>
            <tbody>
                {% for subcategory in subcategories %}
